<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    card_view:cardBackgroundColor="@color/iconListingTittles"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/textViewNomeCapanha"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-281dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/descricao"
            android:text="EITA PESTE"

            android:textColor="@color/cardview_light_background"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="44dp"
            android:text="kkkkkkkkkkkkkkkk"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/textViewDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textViewNomeCapanha"
            android:layout_marginBottom="50dp"
            android:text="RECEBIDO EM:"
            android:textColor="@color/cardview_light_background"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dataInicio"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewDE"
            android:layout_toEndOf="@+id/textViewDE"
            android:text="25/07/1996"
            android:textColor="@color/cardview_light_background"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            card_view:srcCompat="@drawable/cupomsmapa" />

    </RelativeLayout>

</android.support.v7.widget.CardView>