<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Alterar Informações"
        android:textColor="@color/azulescuro"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/novoNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:hint="Novo Nome"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/novoNascimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:hint="@string/DatadeNascimento"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <EditText
        android:id="@+id/emailChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/novo_email"
        android:inputType="textEmailAddress"
        android:textColor="@color/azulescuro"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <EditText
        android:id="@+id/novaSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/nova_senha"
        android:inputType="textPassword"
        android:textColor="@color/azulescuro"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="" />

    <Button
        android:id="@+id/buttonConfirmarAlteracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/btnLogin"
        android:padding="10dp"
        android:text="Confirmar"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>